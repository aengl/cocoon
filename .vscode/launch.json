{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to core",
      "port": 9339
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to main",
      "port": 9340
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to http",
      "port": 9341
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "env": {
        "DEBUG": "*",
        "DEBUG_COLORS": "1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run via CLI",
      "program": "${workspaceFolder}/core/cli.js",
      "args": ["run", "${file}", "Test"],
      "console": "integratedTerminal",
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "env": {
        "DEBUG": "*",
        "DEBUG_COLORS": "1"
      }
    }
  ]
}

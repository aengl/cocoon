{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Cocoon",
      "port": 9339,
      "skipFiles": ["**/node_modules/**/*.js", "<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to editor",
      "port": 9340,
      "skipFiles": ["**/node_modules/**/*.js", "<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to http",
      "port": 9341,
      "skipFiles": ["**/node_modules/**/*.js", "<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run AVA test",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "skipFiles": ["**/node_modules/**/*.js", "<node_internals>/**/*.js"],
      "env": {
        "DEBUG": "*",
        "DEBUG_COLORS": "1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run via CLI",
      "program": "${workspaceFolder}/packages/cocoon/src/cli.js",
      "args": ["run", "${file}", "Test"],
      "console": "integratedTerminal",
      "skipFiles": ["**/node_modules/**/*.js", "<node_internals>/**/*.js"],
      "env": {
        "DEBUG": "*",
        "DEBUG_COLORS": "1"
      }
    }
  ]
}

{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "**/.rpt2_cache/": true,
    "**/*.js": { "when": "$(basename).ts" },
    "**/*?.js": { "when": "$(basename).tsx" },
    "**/*.map": true,
    "packages/cocoon/src/**/*.d.ts": true,
    "packages/util/**/*.d.ts": true
  },
  "peacock.color": "#ff9627",
  "search.exclude": {
    "**/*.ts.md": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#ff9627",
    "titleBar.inactiveBackground": "#ff962799",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "titleBar.border": "#ff9627"
  }
}

  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "tsc && yarn build:editor && yarn build:editor-ui && cp ../monaco/dist/* dist/ui/ && cp src/ui/*.html src/ui/*.png dist/ui/ && chmod +x dist/cocoon-editor.js dist/cocoon-editor-http.js",
    "build:editor": "rollup --config rollup.config.js",
    "build:editor-ui": "webpack --config webpack.ui.js",
    "compile": "tsc",
    "clean": "rm -rf dist/",
    "dev": "tsc --watch",
    "dev:editor-ui": "DEBUG=1 webpack --config webpack.ui.dev.js --watch",
    "analyse-bundle": "./analyse-bundle.sh"
  }

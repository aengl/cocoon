  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@cocoon/cocoon": "^0.97.0",
    "@cocoon/monaco": "^0.97.0",
    "@cocoon/shared": "^0.97.0",
    "@cocoon/types": "^0.97.0",
    "@cocoon/util": "^0.97.0",
    "@tippy.js/react": "2.2.2",
    "@types/debug": "4.1.4",
    "@types/got": "9.6.2",
    "@types/lodash": "4.14.136",
    "@types/mousetrap": "1.6.3",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/react-resize-detector": "4.0.1",
    "@types/styled-components": "4.1.18",
    "@types/webpack": "4.4.35",
    "ayu": "7.2.1",
    "caporal": "1.2.0",
    "css-loader": "3.1.0",
    "debug": "4.1.1",
    "isomorphic-ws": "4.0.1",
    "lodash": "4.17.15",
    "mime-types": "2.1.24",
    "mousetrap": "1.6.3",
    "nodemon": "1.19.1",
    "open": "6.4.0",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-draggable": "3.3.0",
    "react-resize-detector": "4.2.0",
    "react-splitter-layout": "4.0.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "styled-components": "4.3.2",
    "supports-color": "7.0.0",
    "tippy.js": "4.3.4",
    "typescript": "3.5.3",
    "webpack": "4.36.1",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "tsc && yarn build:editor && yarn build:editor-ui && yarn build:editor-http && cp ../cocoon/dist/cocoon.js dist/ && cp ../monaco/dist/* dist/ui/ && cp src/ui/*.html src/ui/*.png dist/ui/ && chmod +x dist/cocoon.js dist/cocoon-editor.js dist/cocoon-editor-http.js",
    "build:editor": "webpack",
    "build:editor-ui": "webpack --config webpack.ui.js",
    "build:editor-http": "webpack --config webpack.http.js",
    "compile": "tsc",
    "clean": "rm -rf dist/",
    "dev": "tsc --watch",
    "dev:link-editor": "ln -sf ../../cocoon/src/cli.js src/cocoon.js && ln -sf http-server.js src/cocoon-editor-http.js",
    "dev:editor-ui": "DEBUG=1 webpack --config webpack.ui.dev.js --watch",
    "analyse-bundle": "./analyse-bundle.sh"
  }
}

    "react-draggable": "4.1.0",
    "react-resize-detector": "4.2.1",
    "react-splitter-layout": "4.0.0",
    "rollup": "1.26.3",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "5.1.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.0.0",
    "styled-components": "4.4.1",
    "supports-color": "7.1.0",
    "tippy.js": "5.1.1",
    "webpack": "4.41.2",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.10"
  },
  "optionalDependencies": {
    "@cocoon/plugin-inspect": "0.108.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "yarn clean && tsc && yarn build:editor && yarn build:editor-ui && cp src/ui/*.html src/ui/*.png dist/ui/ && chmod +x dist/*.js",
    "build:editor": "rollup --config rollup.config.js",
    "build:editor-ui": "webpack --config webpack.config.js",
    "dev": "yarn clean && ln -s src dist && yarn dev:editor",
    "dev:editor": "tsc -p tsconfig.dev.json --watch",
    "dev:editor-ui": "DEBUG=1 webpack --config webpack.config.dev.js --watch",
    "clean": "rm -rf dist",
    "analyse-bundle": "./analyse-bundle.sh"
  }
}

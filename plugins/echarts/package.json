{
  "name": "@cocoon/echarts",
  "version": "0.86.0",
  "license": "GPL-3.0-or-later",
  "main": "dist/index.js",
  "module": "dist/components.js",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@cocoon/rollup": "latest",
    "@cocoon/types": "latest",
    "@types/echarts": "4.1.9",
    "@zeit/ncc": "0.18.5",
    "css-element-queries": "1.2.0",
    "d3-array": "2.2.0",
    "echarts": "4.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "npm run build:nodes && npm run build:components",
    "build:nodes": "ncc build -m index.ts",
    "build:components": "rollup --config rollup.config.js",
    "dev:nodes": "ncc build -w index.ts",
    "dev:components": "DEBUG=1 rollup --config rollup.config.js --watch"
  }
}

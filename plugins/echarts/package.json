{
  "name": "@cocoon/echarts",
  "version": "0.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aengl/cocoon-echarts"
  },
  "license": "GPL-3.0-or-later",
  "main": "dist/index.js",
  "module": "dist/components.js",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@cocoon/rollup": "0.1.0",
    "@cocoon/types": "0.4.2",
    "@types/echarts": "4.1.9",
    "@zeit/ncc": "0.18.5",
    "css-element-queries": "1.2.0",
    "d3-array": "2.2.0",
    "echarts": "4.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "yarn build:index && yarn build:components",
    "build:index": "ncc build -m src/index.ts",
    "build:components": "rollup --config rollup.config.js",
    "dev": "DEBUG=1 rollup --config rollup.config.js --watch"
  }

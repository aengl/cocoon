{
  "name": "@cocoon/cocoon-editor",
  "version": "0.83.0",
  "author": "Lynn Smeria <ae@cephea.de>",
  "license": "GPL-3.0-or-later",
  "bin": {
    "cocoon": "dist/cocoon",
    "cocoon-editor": "dist/cocoon-editor"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@cocoon/cocoon": "^0.83.0",
    "@cocoon/monaco": "^0.1.0",
    "@cocoon/shared": "^0.1.0",
    "@cocoon/types": "^0.7.0",
    "@tippy.js/react": "^2.2.2",
    "@types/debug": "^4.1.4",
    "@types/got": "^9.6.0",
    "@types/lodash": "^4.14.134",
    "@types/mousetrap": "^1.6.2",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-resize-detector": "^4.0.1",
    "@types/styled-components": "^4.1.16",
    "@types/webpack": "^4.4.33",
    "ava": "^2.1.0",
    "ayu": "^7.2.1",
    "caporal": "^1.2.0",
    "css-loader": "^3.0.0",
    "debug": "^4.1.1",
    "isomorphic-ws": "^4.0.1",
    "lodash": "^4.17.11",
    "mime-types": "^2.1.24",
    "mousetrap": "^1.6.3",
    "nodemon": "^1.19.1",
    "open": "^6.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-draggable": "^3.3.0",
    "react-resize-detector": "^4.2.0",
    "react-splitter-layout": "^4.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "styled-components": "^4.3.2",
    "supports-color": "^7.0.0",
    "tippy.js": "^4.3.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.5"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "examples/*"
    ],
    "delay": "500"
  },
  "scripts": {
    "install": "ln -s ../../cocoon/cli.js src/cocoon && ln -s http-server.js src/cocoon-editor-http",
    "build": "tsc && yarn build:editor && yarn build:editor-ui && yarn build:editor-http && cp ../cocoon/dist/cocoon dist/ && cp ../cocoon-monaco/dist/* dist/ui/ && cp src/ui/*.html src/ui/*.png dist/ui/ && chmod +x dist/cocoon dist/cocoon-editor dist/cocoon-editor-http",
    "build:editor": "webpack",
    "build:editor-ui": "webpack --config webpack.ui.js",
    "build:editor-http": "webpack --config webpack.http.js",
    "compile": "tsc",
    "clean": "rm -rf dist/",
    "dev": "tsc --watch",
    "dev:editor-ui": "DEBUG=1 webpack --config webpack.ui.dev.js --watch",
    "test": "ava -v",
    "test:watch": "ava -vw",
    "analyse-bundle": "analyse-bundle.sh"
  }
}

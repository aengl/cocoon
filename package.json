{
  "name": "cocoon",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "concurrently": "4.1.1",
    "lerna": "3.15.0",
    "prettier": "1.18.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npx lerna link --force-local",
    "build": "./build.sh",
    "clean": "./clean.sh",
    "dev": "(cd packages/editor && yarn dev:link-editor) && ./dev.js",
    "dev:editor": "./nodemon.sh",
    "test": "yarn test:cocoon",
    "test:cocoon": "(cd packages/cocoon && yarn test)",
    "release": "yarn build && lerna publish"
  }
}

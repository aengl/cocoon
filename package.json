{
  "name": "cocoon",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/Test.ts",
      "!**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "ava": "2.2.0",
    "concurrently": "4.1.1",
    "lerna": "3.16.4",
    "prettier": "1.18.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npx lerna link --force-local",
    "build": "./build.sh",
    "clean": "./clean.sh",
    "dev": "(cd packages/editor && yarn dev:link-editor) && ./dev.js",
    "dev:editor": "./nodemon.sh",
    "test": "ava -v",
    "test:watch": "ava -vw",
    "release": "yarn build && lerna publish"
  }
}

{
  "name": "cocoon",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "./__tests__/_register"
    ],
    "files": [
      "!**/Test.ts",
      "!**/*.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/node": "12.7.3",
    "ava": "2.3.0",
    "concurrently": "4.1.2",
    "lerna": "3.16.4",
    "prettier": "1.18.2",
    "ts-node": "8.3.0",
    "tslib": "1.10.0",
    "tslint": "5.19.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npx lerna link --force-local",
    "build": "./build.sh",
    "clean": "rm -rf * && git checkout -- *",
    "dev": "./dev.js",
    "dev:editor": "./nodemon.sh",
    "test": "ava -v",
    "test:watch": "ava -vw",
    "deploy": "lerna exec --stream --scope @cocoon/docs -- yarn deploy",
    "release": "lerna version --exact && yarn build && yarn deploy && lerna publish from-git"
  }
}

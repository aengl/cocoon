{
  "name": "cocoon",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "./__tests__/_register"
    ],
    "files": [
      "!**/Test.ts",
      "!**/*.js"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@types/node": "14.14.21",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "4.13.0",
    "ava": "3.15.0",
    "concurrently": "5.3.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "6.15.0",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npx lerna link --force-local",
    "build": "./build.sh",
    "clean": "rm -rf * && git checkout -- *",
    "dev": "./dev.js",
    "dev:editor": "./nodemon.sh",
    "test": "ava -v",
    "test:watch": "ava -vw",
    "deploy": "lerna exec --stream --scope @cocoon/docs -- yarn deploy",
    "release": "lerna version --exact && yarn build && yarn deploy && lerna publish from-git"
  }
}

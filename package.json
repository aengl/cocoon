{
  "private": true,
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "workspaces": [
    "cocoon-core",
    "cocoon-editor",
    "cocoon-monaco",
    "cocoon-rollup",
    "cocoon-testing",
    "cocoon-types",
    "cocoon-shared"
  ],
  "devDependencies": {
    "prettier": "1.18.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0"
  },
  "scripts": {
    "build": "scripts/build.sh",
    "build:core": "webpack --config webpack.core.js",
    "build:main": "webpack --config webpack.main.js",
    "build:http": "webpack --config webpack.http.js",
    "build:editor": "webpack --config webpack.editor.js",
    "build:cocoon-monaco": "webpack --config cocoon-monaco/webpack.config.js",
    "clean": "clean.sh",
    "cli": "node core/cli.js",
    "dev": "tsc && scripts/dev.js",
    "dev:build": "tsc --watch",
    "dev:bundle": "DEBUG=1 webpack --config webpack.editor.dev.js --watch",
    "dev:editor": "DEBUG=main:*,http:* nodemon --inspect=9340 --watch common/ --watch core/ --watch editor/ --ignore editor/ui/ --signal SIGHUP editor/main.js -- --headless",
    "start": "node editor/main.js",
    "start:serve": "node editor/http-server.js",
    "test": "ava -v",
    "test:watch": "ava -vw",
    "analyse-bundle": "scripts/analyse-bundle.sh"
  }
}
